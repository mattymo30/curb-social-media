{
  "name": "Curb-Social-Media",
  "description": "Extension to help block and reduce the usage of social media",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "html/main.html"
  }
}